{
  "name": "arch-playground",
  "version": "1.0.0-SNAPSHOT",
  "description": "Make breuninger architecture great again.",
  "main": "index.js",
  "scripts": {
    "test": "stylelint '{**/,}*.{css,scss}' && eslint '{**/,}*.{js,jsx}' && tslint -p ./tsconfig.json 'src/client{**/,}*.{ts,tsx}' && NODE_ENV=test jest",
    "test:e2e": "SELENIUM_HOST=XXX BASE_DOMAIN=XXX protractor src/test/resources/e2e/protractor.conf.js",
    "test:e2e:local": "BASE_DOMAIN=http://localhost:4242/ protractor src/test/resources/e2e/protractor.conf.js",
    "webdriver:install": "webdriver-manager update",
    "webdriver:start": "webdriver-manager start",
    "build": "rm -rf src/main/resources/static && NODE_ENV=production webpack --progress --config ./webpack/webpack.config.prod.js",
    "dependency-update": "npm-check -E -u",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "commitmsg": "commitlint -e",
    "start": "rm -rf src/main/resources/static && NODE_ENV=development webpack-dashboard -- webpack-dev-server --config ./webpack/webpack.config.dev.js"
  },
  "lint-staged": {
    "{**/,}*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "{**/,}*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "{**/,}*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "jest-tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/client/{**/,}*.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "<rootDir>/src/client/{**/,}*.test.{ts,tsx}"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy"
    },
    "modulePathIgnorePatterns": [
      "(.idea|.gradle|build|classes|coverage|gradle|node_modules|src/main|src/test|webpack)"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 version",
              "ie 9"
            ]
          },
          "modules": false,
          "useBuiltIns": true
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:BeneStem/arch-playground.git"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.2",
    "@types/jest": "22.1.3",
    "awesome-typescript-loader": "3.5.0",
    "babel-preset-env": "1.6.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "commitizen": "2.9.6",
    "compression-webpack-plugin": "1.1.8",
    "css-loader": "0.28.10",
    "cssnano": "3.10.0",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.18.1",
    "extract-text-webpack-plugin": "3.0.2",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "1.1.9",
    "friendly-errors-webpack-plugin": "1.6.1",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "identity-obj-proxy": "3.0.0",
    "image-webpack-loader": "4.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "22.4.2",
    "lint-staged": "7.0.0",
    "npm-check": "5.5.2",
    "offline-plugin": "4.9.0",
    "optimize-css-assets-webpack-plugin": "3.2.0",
    "postcss": "6.0.19",
    "postcss-cssnext": "3.1.0",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-import": "11.1.0",
    "postcss-loader": "2.1.0",
    "protractor": "5.3.0",
    "react-dev-utils": "5.0.0",
    "source-map-loader": "0.2.3",
    "style-loader": "0.20.2",
    "stylelint": "9.1.1",
    "ts-jest": "22.0.4",
    "tslint": "5.9.1",
    "tslint-eslint-rules": "5.1.0",
    "tslint-language-service": "0.9.8",
    "typescript": "2.7.2",
    "url-loader": "0.6.2",
    "webpack": "4.0.0",
    "webpack-dashboard": "1.1.1",
    "webpack-dev-server": "3.0.0",
    "webpack-manifest-plugin": "1.3.2"
  },
  "author": {
    "name": "Benedikt Stemmildt",
    "email": "benedikt@stemmildt.com",
    "url": "https://github.com/benestem"
  },
  "license": "Apache-2.0"
}
